<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical">

        <Switch
            android:id="@+id/switch1"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:checked="true"
            android:textOff="Vanilla Meme"
            android:textOn="Demotivational Poster"
            android:typeface="serif" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/change_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Change Image" />

            <ImageButton
                android:id="@+id/save"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Save" />

            <ImageButton
                android:id="@+id/share"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Share" />
        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10">

        <LinearLayout
            android:id="@+id/demoMeme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/demo_poster"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/insert_pic_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/demo_pic" />

            <EditText
                android:id="@+id/bigtext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:adjustViewBounds="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center_horizontal"
                android:hint="LARGE TEXT HERE"
                android:inputType="textCapCharacters|textMultiLine|textNoSuggestions"
                android:isScrollContainer="false"
                android:maxLength="50"
                android:textColor="#FFF"
                android:textColorHint="#FFF"
                android:textSize="70px"
                android:typeface="serif" />

            <EditText
                android:id="@+id/smalltext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:adjustViewBounds="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center_horizontal"
                android:hint="Small text here"
                android:inputType="textMultiLine|textNoSuggestions|textCapSentences"
                android:isScrollContainer="false"
                android:maxLength="80"
                android:textColor="#FFF"
                android:textColorHint="#FFF"
                android:textSize="30px" />


        </LinearLayout>


    </ScrollView>

</LinearLayout>